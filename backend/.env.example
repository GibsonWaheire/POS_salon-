# ============================================
# Salon POS Backend - Environment Variables
# ============================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# Database Configuration
# For SQLite (development):
DATABASE_URL=sqlite:///pos_salon.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/pos_salon
# For MySQL (production):
# DATABASE_URL=mysql://user:password@localhost:3306/pos_salon

# Flask Secret Key
# Generate a secure random key for production:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production

# Session Cookie Security (Production)
# Set to 'true' when using HTTPS in production
SESSION_COOKIE_SECURE=False
# Options: 'Lax', 'Strict', or 'None'
SESSION_COOKIE_SAMESITE=Lax

# CORS Configuration
# In development, use '*' to allow all origins
# In production, specify comma-separated list of allowed origins:
# CORS_ORIGINS=http://localhost:5173,https://yourdomain.com
CORS_ORIGINS=*

# Optional: Flask Environment
# FLASK_ENV=development
# FLASK_DEBUG=True

# Paystack (checkout in KES) https://paystack.com
# Webhook: add URL https://yourdomain.com/api/webhooks/paystack
PAYSTACK_SECRET_KEY=
# Redirect after successful payment (no trailing slash)
PAYSTACK_SUCCESS_URL=http://localhost:5173/welcome
# Redirect when customer cancels payment
PAYSTACK_CANCEL_URL=http://localhost:5173/checkout
# USD to KES conversion rate (1 USD = X KES). Update periodically.
PAYSTACK_USD_TO_KES_RATE=130
